# Auto detect text files and perform LF normalization
* text=auto
import tkinter as tk

# Function to handle button click for numbers and operators
def button_click(value):
    current = entry.get()
    entry.delete(0, tk.END)
    entry.insert(0, current + value)

# Function to handle calculation
def calculate():
    try:
        # Replace multiply with divide and add with subtract
        current = entry.get().replace('*', '/').replace('+', '-')
        result = eval(current)  # eval evaluates the expression entered
        entry.delete(0, tk.END)
        entry.insert(0, str(result))

    except:
        entry.delete(0, tk.END)
        entry.insert(0, "Error")


# Function to clear the entry box
def clear():
    entry.delete(0, tk.END)

# Main window
root = tk.Tk()
root.title("MADHAV")

# Entry box to display expressions
entry = tk.Entry(root, font=("Arial", 20), bd=10, relief="sunken", width=16, justify="right")
entry.grid(row=0, column=0, columnspan=4)

# Buttons for all numbers and operators
buttons = [
    ('7', 1, 0), ('8', 1, 1), ('9', 1, 2), ('*', 1, 3),  # Row 1
    ('4', 2, 0), ('5', 2, 1), ('6', 2, 2), ('+', 2, 3),  # Row 2
    ('1', 3, 0), ('2', 3, 1), ('3', 3, 2), ('-', 3, 3),  # Row 3
    ('0', 4, 0), ('C', 4, 1), ('=', 4, 2), ('/', 4, 3),  # Row 4
]

# Create buttons for numbers and operations
for (text, row, col) in buttons:
    if text == "=":
        button = tk.Button(root, text=text, width=5, height=2, font=("Arial", 20), command=calculate)
    elif text == "C":
        button = tk.Button(root, text=text, width=5, height=2, font=("Arial", 20), command=clear)
    else:
        button = tk.Button(root, text=text, width=5, height=2, font=("Arial", 20), command=lambda value=text: button_click(value))
    button.grid(row=row, column=col)

# Main loop to run the GUI
root.mainloop()
